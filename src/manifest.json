{
  "name": "Casa Extension",
  "description": "Easily make & receive Bitcoin and Lightning Network payments on the web using your Casa Node.",
  "version": "1.0.5",
  "manifest_version": 2,
  "icons": {
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "browser_action": {
    "default_title": "Casa Extension",
    "default_popup": "popup/popup.html"
  },
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": true,
    "chrome_style": true
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*", "file://*/*"],
      "js": ["content.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "web_accessible_resources": ["*.js", "*.html"],
  "permissions": ["storage", "activeTab", "clipboardWrite", "contextMenus"]
}
